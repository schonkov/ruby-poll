<h1>New Poll</h1>
<%= form_with(model: @poll, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :question %>
    <%= f.text_field :question, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :is_published, "Published?" %>
    <%= f.check_box :is_published %>
    <small class="form-text text-muted">
      If checked, the poll is published and can be voted on.
    </small>
  </div>

  <h3>Answers</h3>
  <div id="answers-fields">
    <% @poll.answers.build if @poll.answers.blank? %>
    <%= f.fields_for :answers do |af| %>
      <div class="mb-3 answer-field">
        <%= af.label :text, "Answer" %>
        <%= af.text_field :text, class: "form-control" %>
      </div>
    <% end %>
  </div>

  <button type="button" id="add-answer" class="btn btn-secondary mb-3">+ Add another answer</button>

  <div class="mb-3">
    <%= f.submit "Create Poll", class: "btn btn-success" %>
  </div>
<% end %>

<template id="answer-template">
  <div class="mb-3 answer-field">
    <label>Answer</label>
    <!-- We'll set the correct name in JS by replacing INDEX with a dynamic number -->
    <input type="text" class="form-control answer-input">
  </div>
</template>
